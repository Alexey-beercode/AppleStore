<!DOCTYPE html>
<html>
<head>
    <title>Apple Store</title>
    <link rel="stylesheet" href="~/css/style.css"> <!-- Путь к файлу стилей -->
</head>
<body>
<header>
    <h1>Онлайн магазин телефонов</h1>
    <div class="auth-buttons">
        <a class="btn btn-auth" href="/Account/Login">Авторизоваться</a>
        <a class="btn btn-auth" href="/Account/Register">Зарегистрироваться</a>
        <a class="btn btn-auth" href="/Account/Logout">Выйти</a>
    </div>
</header>
<div class="top-buttons">
   <a href="@Url.Action("Catalog", "Home",new {type=1})" class="top-button">Часы</a>
     <a href="@Url.Action("Catalog", "Home",new {type=0})" class="top-button">Телефоны</a>
     <a href="@Url.Action("Catalog", "Home",new{type=2})" class="top-button">Планшеты</a>
     <a href="@Url.Action("Catalog", "Home",new {type=3})" class="top-button">Ноутбуки</a>
</div>
@RenderBody()
</body>
</html>