@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AppleStore.Domain.Entity.Device

<!DOCTYPE html>
<html>
<head>
    <title>Заказ товара</title>
    <link rel="stylesheet" href="css/styles.css"> <!-- Путь к файлу стилей -->
</head>
<body>
<header>
    <h1>Онлайн магазин телефонов</h1>
</header>
<div class="order">
    <h2>Оформление заказа</h2>
    <p>Выбранный товар: @Model.Name</p>
    <form asp-action="GetOrder" asp-controller="Order" method="post"> <!-- Отправка заказа на сервер -->
        <label for="name">Имя:</label>
        <input type="text" id="name" name="name" required>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <label for="address">Адрес доставки:</label>
        <input type="text" id="address" name="address" required>
        <button type="submit">Оформить заказ</button>
    </form>
</div>
</body>
</html>