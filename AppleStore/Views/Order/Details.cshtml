@using AppleStore.Domain.Entity
@model AppleStore.Domain.Entity.Device

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Name</title>
    <link rel="stylesheet" href="css/styles.css"> <!-- Путь к файлу стилей -->
</head>
<body>
<header>
    <h1>Онлайн магазин телефонов</h1>
</header>
<div class="product">
    <img src="@Model.ImageUrl" alt="@Model.Name">
    <h2>@Model.Name</h2>
    <p>@Model.Description</p><br/>
    <p>@Model.Price</p>
    <a href="@Url.Action("PlaceOrder", "Order",new {id=@Model.Id})">Заказать</a>
</div>
</body>
</html>