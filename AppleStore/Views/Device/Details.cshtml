@using AppleStore.Domain.Entity
@model AppleStore.Domain.Entity.Device

@{
    Layout = "CatalogLayout";
}
<!DOCTYPE html>
<html>
<head>
<title>@Model.Name</title>
</head>
<body>
<div class="product">
    <img src="@Model.ImageUrl" alt="@Model.Name">
    <h2>@Model.Name</h2>
    <p>@Model.Description</p><br/>
    <p>@Model.Price руб</p>
    <a href="@Url.Action("PlaceOrder", "Order", new { id = @Model.Id })">Заказать</a>
</div>
<div class="navigation-button">
    <a href="@Url.Action("Catalog", "Home",new {type=-1})" class="btn">Назад</a>
</div>
</body>
</html>